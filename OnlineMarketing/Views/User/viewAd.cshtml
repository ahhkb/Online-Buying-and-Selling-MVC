@model OnlineMarketing.Models.AdViewmodel
@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<style>
    td {
        padding: 20px;
    }
</style>
<div class="row">
    <div class="col-lg-12 col-md-12">
        <img src="~/Content/Image/Copy of EID SALE BANNER - Made with PosterMyWall.jpg" class="img img-responsive" style="width:100%" />
    </div>
</div>

<div class="row">

    <div class="col-lg-2 col-md-2">
        <img src="~/Content/Image/images.jpeg" class="img img-responsive" style=" height:500px;" />
    </div>



    <div class="col-lg-8 col-md-8">

        <div>
            <h1>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
        </div>

        <img src="@Url.Content(@Model.pro_image)" style="width:500px; height:350PX" />
        <div>
            <h1>Description</h1>
        </div>

        <table>
            @*<tr><td>Description</td> <td>@Model.pro_description</td></tr>*@
            <tr> <td>Price: </td> <td>@Model.pro_price </td> </tr>
            <tr> <td>Category: </td> <td>@Model.cat_name </td> </tr>
            <tr> <td>Posted by: </td> <td>@Model.u_username <img src="@Url.Content(@Model.u_image)" style="width:90px; height:60px"  /> </td> </tr>
            <tr> <td>Contact: </td> <td>@Model.u_contact  </td> </tr>
            <tr>
                <td colspan="2">
                    @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_users))
                    {

                        @Html.ActionLink("Delete  this Ad", "DeleteAd", new { @class = "btn btn-info", id = Model.pro_id })



                    }
                </td>
            </tr>

        </table>
    </div>

    <div class="col-lg-2 col-md-2">
        <img src="~/Content/img/150_sleep1_600.gif" class="img img-responsive" style=" height:500px;" />
    </div>


</div>